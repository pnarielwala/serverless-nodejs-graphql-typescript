{
  "compilerOptions": {
    "target": "es5",
    // very important
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016", "esnext.asynciterable"],
    "sourceMap": true,
    "baseUrl": "src",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [".webpack"]
}
